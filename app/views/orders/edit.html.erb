<h1>Edit Order</h1>
<%= form_with(model: [@menu, @order], local: true) do |form| %>
<%= form.label :name %>
<%= form.text_field :name %>

<%= form.label :address %>
<%= form.text_area :address %>

<%= form.label :phone %>
<%= form.text_field :phone %>

  <h2>Order Items</h2>
  <ul>
    <% @menu.items.each do |item| %>
      <li>
        <%= check_box_tag "order[item_ids][]", item.id, @order.items.include?(item) %>
        <%= item.name %> ($<%= item.price %>)
      </li>
    <% end %>
  </ul>
<%= form.submit %>
<% end %>